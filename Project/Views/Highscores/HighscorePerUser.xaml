<Window x:Class="Project.Views.HighscorePerUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Highscore per gebruiker" Height="300" Width="380" Background="#FFB0B0B0">
    <Grid>
        <ComboBox Name="gamesComboBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" Loaded="gamesComboBox_Loaded" SelectionChanged="gamesComboBox_SelectionChanged"  />
        <Button Name="checkButton" Content="Check" HorizontalAlignment="Left" Height="27" Margin="229,10,0,0" VerticalAlignment="Top" Width="62" RenderTransformOrigin="1.069,0.736" Click="checkButton_Click"/>
        <TextBox Name="nameTextBox" HorizontalAlignment="Left" Height="21" Margin="130,11,0,0" TextWrapping="Wrap" Text="Naam" VerticalAlignment="Top" Width="99"/>
        <ListBox Name="highscoresListBox" HorizontalAlignment="Left" Height="223" Margin="10,37,0,0" VerticalAlignment="Top" Width="274"/>
        <Button Name="homeButton" Content="Home" HorizontalAlignment="Left" Height="27" Margin="296,10,0,0" VerticalAlignment="Top" Width="73" Click="homeButton_Click"/>
    </Grid>
</Window>
