<Window x:Class="Project.Views.GlobalHighscores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Globale highscores" Height="300" Width="300" Background="#FFB0B0B0">
    <Grid>
        <Button Name="showButton" Content="Toon highscores" HorizontalAlignment="Left" Height="29" Margin="135,3,0,0" VerticalAlignment="Top" Width="149" Click="showButton_Click"/>
        <ComboBox x:Name="gamesComboBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" Loaded="gamesComboBox_Loaded" SelectionChanged="gamesComboBox_SelectionChanged"  />
        <ListBox x:Name="highscoresListBox" HorizontalAlignment="Left" Height="223" Margin="10,37,0,0" VerticalAlignment="Top" Width="274"/>
    </Grid>
</Window>
