<Window x:Class="Project.Views.SnakeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Snake" Height="300" Width="400"
        KeyDown="snakeCanvas_KeyDown" KeyUp="snakeCanvas_KeyUp">
    <Grid>
        <Canvas Name="snakeCanvas" Background="LightGray" HorizontalAlignment="Left" Height="250" Margin="10,10,0,0" VerticalAlignment="Top" Width="280"/>
        <Label Name="pointsLabel" Content="Punten:" HorizontalAlignment="Left" Height="32" Margin="295,90,0,0" VerticalAlignment="Top" Width="95"/>
        <Label Name="totalPointsLabel" Content="0" HorizontalAlignment="Left" Height="43" Margin="295,122,0,0" VerticalAlignment="Top" Width="95"/>
        <Label Name="timeLabel" Content="Resterende tijd:" HorizontalAlignment="Left" Height="32" Margin="295,10,0,0" VerticalAlignment="Top" Width="95"/>
        <Label Name="timeLeftLabel" Content="" HorizontalAlignment="Left" Height="43" Margin="295,42,0,0" VerticalAlignment="Top" Width="95"/>
    </Grid>
</Window>
