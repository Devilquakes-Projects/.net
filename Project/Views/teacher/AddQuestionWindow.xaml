<Window x:Class="Project.Views.AddQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddQuestion" Height="300" Width="300">
    <Grid>
        <ComboBox HorizontalAlignment="Left" Margin="135,46,0,0" VerticalAlignment="Top" Width="120" Loaded="ComboBox_Loaded" SelectionChanged="ComboBox_SelectionChanged"/>
        <Label Content="Question" HorizontalAlignment="Left" Margin="43,85,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="questionTextBox" HorizontalAlignment="Left" Height="23" Margin="135,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Solution" HorizontalAlignment="Left" Margin="43,116,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.569,-0.587"/>
        <TextBox x:Name="solutionTextBox" HorizontalAlignment="Left" Height="23" Margin="135,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="addButton" Content="Add" HorizontalAlignment="Left" Margin="135,160,0,0" VerticalAlignment="Top" Width="75" Click="addButton_Click"/>
    </Grid>
</Window>
